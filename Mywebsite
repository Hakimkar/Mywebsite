<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>خريطة الصحراء الغربية</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        #map {
            height: 600px;
            width: 100%;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">خريطة الصحراء الغربية</h1>
    <div id="map"></div>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        const map = L.map('map').setView([24.5, -12.5], 6);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors'
        }).addTo(map);

        const cities = [
            { name: "العيون", coords: [27.15, -13.20] },
            { name: "الداخلة", coords: [23.72, -15.93] },
            { name: "بوجدور", coords: [26.12, -14.48] },
            { name: "السمارة", coords: [26.73, -11.67] }
        ];

        cities.forEach(city => {
            L.marker(city.coords)
                .addTo(map)
                .bindPopup(`<b>${city.name}</b>`);
        });

        const roads = [
            { from: [27.15, -13.20], to: [23.72, -15.93] },
            { from: [27.15, -13.20], to: [26.12, -14.48] },
            { from: [27.15, -13.20], to: [26.73, -11.67] }
        ];

        roads.forEach(road => {
            L.polyline([road.from, road.to], { color: 'blue' }).addTo(map);
        });
    </script>
</body>
</html>
